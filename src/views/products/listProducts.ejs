<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head'); %>
<body>

    <%- include('../partials/header'); %>

<div class="list-products">
    <% product.forEach((row) => {  %>
        <article class="list-container"> 
            <a href="/products/<%= row.id %>">
                <div class="image-list-container">
                    <img class="" src="/images/<%= row.image %>" alt="<%= row.image %>">
                </div>
                <div class="info-list">
                    <h2 class="nombre"><%= row.name %></h2>
                    <p class="descripcion"><%= row.description %></p> 
                    <p class="precio">$<%= row.price %></p>
                </div>
            </a>
        </article>
        <% }) %>
</div>

</main>

<%- include('../partials/footer'); %>

</body>
</html>


