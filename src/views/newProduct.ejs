<body>
    
    <%-include('./partials/header.ejs')  %>

    <main>


        <div class="bloqueNewProd">

            <form class="form-newProduct" action="/home" method="GET">

                <h2>Nuevo producto</h2>

                <div>
                    <input class="text-field-product" type="text" name="" placeholder="Nombre del producto">
                </div>

                <div>
                    <input class="text-field-product" type="text" name="" placeholder="Descripción">
                </div>
                
              

                <div class="product-file-container">
                    <label class="product-label-file" for="fotoProduct">Agregar imagenes</label>
                    <input type="file"   name="fotoProduct" id="fotoProduct">
                </div>

                <div class="cantidad-product-container">
                    <label for="product-cantidad">Cantidad</label>
                    <input class="text-field-product product-cantidad" type="text" name="product-cantidad" id=""  placeholder="cantidad">
                </div>

                
                <div class="product-description">
                    
                    <div class="categories-container">
                        
                        <label for="categories">Categorias</label>
                        
                        <select class="product-categories" name="categories" id="" >
                            <option class="product-categories-options" value="perifericos">Perifericos</option>
                            <option class="product-categories-options" value="componentes-pc">Componentes de PC</option>
                        </select>
                    </div>
                    
                    
                </div>

                <h4>Descripción</h4>

                <div class="general">
                    <label for="general">General</label>
                    <input class="text-field-product" type="text" name="general" placeholder="General" id="">
                </div>

                <div class="general">
                    <label for="general">Caracteristicas</label>
                    <input class="text-field-product" type="text" name="general" placeholder="Caracteristicas" id="">
                </div>

                <div class="general">
                    <label for="general">Compatibilidad</label>
                    <input class="text-field-product" type="text" name="general" placeholder="Compatibilidad" id="">
                </div>

                <div>
                    <input class="text-field-product" type="text" name="precio" placeholder="Precio">
                </div>
             
                <div class="button-products">
                    <button>Agregar</button>
                    <button>Cancelar</button>
                </div>

            </form>

        </div>

    </main>

    <footer>
        <section class="sectionFooter">
            <div class="columnaUno">
                <a class="header-image-container" href="/">
