<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head'); %>

<body>

    <%- include('../partials/header'); %>

    <main>


        <div class="bloqueSignup">

            <form class="form-signup" action="/register" method="GET">

                <div class="icon-register">
                    <i class="fa-solid fa-circle-user"></i>
                </div>

                <div>
                    <input class="text-field" type="text" name="nombre" placeholder="Nombre completo">
                </div>

                <div>
                    <input class="text-field" type="email" name="email" placeholder="E-mail">
                </div>

                <div>
                    <input class="text-field" type="password" name="contrasenia" placeholder="Contraseña">
                </div>

                <div>
                    <input class="text-field" type="password" name="contrasenia" placeholder="Confirmar contraseña">
                </div>

                <div>
                    <label class="fotoperfil" for="fotoPerfil">Agregar imagen</label>
                    <input type="file" name="fotoPerfil" id="fotoPerfil">
                </div>

               
                <canvas></canvas>

                <div class="cuadrOr">
                    <div class="register-or">
                        <label class="label-or">OR</label>
                    </div>
                </div>

                <div class="redes">
                    <i class="fa-brands fa-google"></i>
                    <i class="fa-brands fa-facebook"></i>
                </div>

                <div class="buttons">
                    <button class="botonSubmit" type="submit">Sign Up</button>
                    <div class="bloqueLogin">
                        <legend>
                            Already have an account?
                        </legend>

                        <button type="submit" formmethod="get" formaction="/login" class="botonLogin"> 
                            Login
                        </button>
                        
                    </div>

                </div>


            </form>

        </div>

    </main>
   
    <%- include('../partials/footer'); %>

</body>
</html>

