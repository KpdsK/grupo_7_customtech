<article class="tarjeta-producto <%= producto.id %>">
    <i class="fa-sharp fa-solid fa-heart corazon-whislist"></i>
    <i class="fa-solid fa-cart-shopping carrito-whislist"></i>
    <i class="fa fa-trash tacho-basura" onclick="quitarProductoWhislist(<%= producto.id %>)" aria-hidden="true"></i>
    <div class="tarjeta-producto-cabecera">
        <div class="tarjeta-producto-cabecera-imagen">
            <img src="<%=producto.imagen %>" alt="imagen-producto-1">
        </div>
        <div class="tarjeta-producto-titulo-descripcion">
            <legend><%= producto.nombre %></legend>
            <p><%= producto.descripcion %></p>
        </div>
    </div>
    <div class="tarjeta-producto-detalle">
        <div class="tarjeta-producto-detalles">
            <div class="tarjeta-producto-detalle-titulos">
                <div class="tarjeta-producto-detalle-item">
                    <label><%= producto.caracteristica.nombre %></label>
                    <div class="caracteristica">
                        <i class="fa fa-circle" aria-hidden="true"></i>
                        <label><%= producto.caracteristica.valor %></label>
                    </div>
                </div>
                <div class="tarjeta-producto-detalle-item">
                    <label for="precio">Precio</label>
                    <label id="precio">$<%= producto.precio %></label>
                </div>
                <div class="tarjeta-producto-detalle-item">
                    <label for="precio">SubTotal</label>
                    <label id="precio">$<%= producto.precio*producto.cantidad %></label>
                </div>
            </div>
        </div>
    </div>
</article>